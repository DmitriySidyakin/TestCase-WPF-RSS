<Window x:Class="TestCase_WPF_RSS.Window_CreateShipment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCase_WPF_RSS"
        mc:Ignorable="d"
        Title="Создать Товар"  Height="125" Width="240" MinHeight="0" MinWidth="0" WindowStartupLocation="CenterScreen" WindowState="Normal" Icon="/logo.png">
    <Grid>
        <Label Content="Статус" Margin="10,10,10,10"/>
        <ComboBox Name="StatusComboBox" HorizontalAlignment="Left" Margin="60,12,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem x:Name="Received_ComboBoxItem" Content="Принят" IsSelected="True"/>
            <ComboBoxItem x:Name="ToWarehouse_ComboBoxItem" Content="На склад"/>
            <ComboBoxItem x:Name="Sold_ComboBoxItem" Content="Продан"/>
        </ComboBox>
        <Button Height="24" VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" Margin="0,55,0,0" Content="Создать" Click="Button_Click">
        </Button>
    </Grid>
</Window>
